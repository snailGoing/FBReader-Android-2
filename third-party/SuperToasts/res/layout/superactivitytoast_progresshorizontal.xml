<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    style="@style/SuperActivityToast_ProgressHorizontal_RootLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:layout_marginBottom="@dimen/toast_hover"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_textview"
        style="@style/SuperActivityToast_ProgressHorizontal_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/SuperActivityToast_ProgressHorizontal_ProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>